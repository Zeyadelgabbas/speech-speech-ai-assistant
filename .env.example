OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
TEMPERATURE = 0.7
MAX_TOKENS  = 3000

# Web Search API (choose one)
# SerpAPI: https://serpapi.com/manage-api-key
SERP_API_KEY=your_serpapi_key_here
# Alternative: Bing Search API
# BING_SEARCH_API_KEY=your_bing_key_here

# Google APIs (Gmail, Calendar)
# Follow setup guide in scripts/setup_google_oauth.py
# These are set automatically after OAuth flow
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# False if gmai, serpapi tools aren't needed 
INCLUDE_SEARCH_SERPAPI = true
INCLUDE_GMAIL_DRAFT = true


# Application Settings
APP_NAME=VoiceAssistant
DEBUG_MODE=false

# Audio Settings
# Sample rate for recording (16000 Hz is optimal for Whisper)
AUDIO_SAMPLE_RATE=16000
# VAD aggressiveness (0-3, higher = more aggressive silence detection)
VAD_AGGRESSIVENESS=3

# STT Settings (faster-whisper)
# Model size: tiny, base, small, medium, large-v2, large-v3
WHISPER_MODEL_SIZE=base
# Device: cpu, cuda, or auto (auto will use GPU if available)
WHISPER_DEVICE=auto
# Compute type: int8, float16, float32 (int8 is fastest, float32 most accurate)
WHISPER_COMPUTE_TYPE=int8

# TTS Settings (Coqui)
# Model name from TTS library (use "tts_models/en/ljspeech/tacotron2-DDC" for fast CPU)
PIPER_VOICE=en_US-amy-medium
PIPER_MODEL_QUALITY = medium
VOICE_DIR =./voices
# Alternative high-quality model (slower): tts_models/en/vctk/vits

# Vector Database Settings
CHROMA_PERSIST_DIR=./data/chroma
EMBEDDING_CHUNK_SIZE=500
EMBEDDING_CHUNK_OVERLAP=50
RAG_TOP_K=5

# Memory Settings
USER_SUMMARY_FILE=./data/user_summary.txt
SESSION_MEMORY_MAX_TOKENS=4000

# Demo Mode (set to true to use stubbed responses, no API calls)
DEMO_MODE=false

# File Paths
DATA_DIR=./data
LOGS_DIR=./logs
INFO_INSERTS_DIR=./data/info_inserts
GOOGLE_TOKENS_DIR=./data/google_tokens